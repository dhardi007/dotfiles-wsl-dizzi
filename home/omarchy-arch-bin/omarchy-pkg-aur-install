#!/bin/bash
#/002   omarchy-pkg-aur-install

# Colores ANSI
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
RED='\033[0;31m'
RESET='\033[0m'

fzf_args=(
  --multi
  --preview '~/wrapper/yay-info-colored.sh {1}'
  --preview-label='alt-p: toggle description, alt-b/B: toggle PKGBUILD, alt-j/k: scroll, tab: multi-select'
  --preview-label-pos='bottom'
  --preview-window 'down:65%:wrap'
  --bind 'alt-p:toggle-preview'
  --bind 'alt-d:preview-half-page-down,alt-u:preview-half-page-up'
  --bind 'alt-k:preview-up,alt-j:preview-down'
  --bind 'alt-b:change-preview:yay -Gpa {1} | tail -n +5'
  --bind 'alt-B:change-preview:/home/diego/scripts/yay-info-colored.sh {1}'
  --color 'pointer:green,marker:green,label:cyan,border:blue'
)

echo -e "${CYAN}üîç Buscando paquetes en AUR...${RESET}"

pkg_names=$(yay -Slqa | fzf "${fzf_args[@]}")

if [[ -n "$pkg_names" ]]; then
  echo -e "\n${GREEN}üì¶ Paquetes seleccionados:${RESET}"
  echo -e "${YELLOW}$pkg_names${RESET}\n"

  echo -e "${BLUE}‚öôÔ∏è  Instalando con yay...${RESET}"
  echo "$pkg_names" | tr '\n' ' ' | xargs yay -S --noconfirm

  echo -e "\n${CYAN}üîÑ Actualizando base de datos...${RESET}"
  sudo updatedb

  omarchy-show-done
else
  echo -e "${RED}‚ùå No se seleccion√≥ ning√∫n paquete${RESET}"
fi
